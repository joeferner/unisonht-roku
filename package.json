{
  "name": "@unisonht/roku",
  "version": "1.0.0",
  "description": "UnisonHT Plugin for Roku",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "prepare": "rm -rf dist && npm run build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix --ext .ts .",
    "lint-staged": "lint-staged",
    "pre-commit": "npm run format && npm run lint-staged && npm run build",
    "test:watch": "DEBUG=unisonht:* nodemon ../unisonht/dist/bin/server.js -c sample.config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeferner/unisonht-roku.git"
  },
  "keywords": [
    "unisonht",
    "roku"
  ],
  "author": "Joe Ferner <joe@fernsroth.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joeferner/unisonht-roku/issues"
  },
  "homepage": "https://github.com/joeferner/unisonht-roku#readme",
  "peerDependencies": {
    "@unisonht/unisonht": "../unisonht/"
  },
  "dependencies": {
    "axios": "0.27.x",
    "roku-client": "5.2.x"
  },
  "devDependencies": {
    "@types/node": "17.x",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "eslint": "8.x",
    "husky": "7.x",
    "lint-staged": "12.x",
    "nodemon": "2.x",
    "prettier": "2.x",
    "ts-node": "10.x",
    "typescript": "4.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
